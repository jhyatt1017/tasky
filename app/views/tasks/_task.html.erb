<div class="panel panel-primary make-see-through">
  <div class="panel-heading">
    <%= link_to edit_task_path(task) do %>
      Created: <%= time_ago_in_words(task.created_at) %> ago
    <% end %>
    <%= link_to '<i class="fa fa-trash"></i>'.html_safe, task_path(task), method: :delete, data: {confirm: 'Are you sure you want to delete task?'}, class: 'pull-right' %>
  </div>
    <h4><div class="panel-body text-center"><%= task.title %></div></h4>
    <div class="panel-body"><p><%= raw(task.content_html) %></p></div>
      <div class="panel-footer">
        <div class="btn-group btn-group-justified">	
      <% if task.state == 'doing' %> 
        <%= link_to '<i class="fa fa-long-arrow-left"></i>'.html_safe, change_task_path(task, state: "to_do"), method: :put, class: 'btn btn-info btn-block' %>
        <%= link_to '<i class="fa fa-long-arrow-right"></i>'.html_safe, change_task_path(task, state: "done"), method: :put, class: 'btn btn-info btn-block' %>
      <% elsif task.state == 'done'%>
        <%= link_to '<i class="fa fa-long-arrow-left"></i>'.html_safe, change_task_path(task, state: "doing"), method: :put, class: 'btn btn-info btn-block' %>
      <% else %>
        <%= link_to '<i class="fa fa-long-arrow-right"></i>'.html_safe, change_task_path(task, state: "doing"), method: :put, class: 'btn btn-info btn-block' %>
      <% end %>
    </div>
  </div>
</div>
  
  
  
  