<div class="error-message">
    <% if @task.errors.any? %>
    <h3>Oops, something went wrong:</h3>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
        <li>
          <h4><%= msg %></h4>
        </li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <%= simple_form_for @task, html: {class: 'form-signin'} do |f| %>
    <%= f.input :title, label: false, placeholder: "Task Title", autofocus: true %>
    <%= f.input :content, label: false, placeholder: "Task Content", autofocus: true %>
    <%= f.button :submit, value: "Create/Update Task", class: 'btn btn-primary btn-block update-button' %>
  <div class="text-center">
    <%= link_to 'Back', tasks_path, class: 'btn btn-primary'%>
  </div>	
  <% end %>
  