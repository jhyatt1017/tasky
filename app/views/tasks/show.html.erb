<div class="header-width">
  <h1 class="text-center">Showing Task</h1>
  <div class="row make-see-through">
    <div class="col-md-12">
      <div class="panel panel-primary">
        <div class="panel-heading text-center"><h4>Updated Task</h4></div>
          <!-- (instance variable) @task displays current task/"content" that was created by user -->
          <div class="panel-body">
          <h4 class="text-center task-text">Task Title:</h4> <p class="text-center"><%= @task.title %></p>
          <br>
          <h4 class="text-center task-text">Task Content:</h4> <p class="text-center"><%= raw(markdown(@task.content)) %></p>
          <br>
          <!-- (instance variable) @task displays current task/"state" that was created by user -->
          <h4 class="text-center task-text">Task State:</h4> <p class="text-center"><%= @task.state %></p>
        </div>
      </div>
    </div>
  </div>
    <p>
      <%= link_to 'Update Task', tasks_path, class: 'btn btn-primary' %> |
      <%= link_to 'Edit Task', edit_task_path(@task), class: 'btn btn-primary'  %>
    </p>
</div>
  