<div class="make-see-through">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: {class: 'form-signin'}) do |f| %>
    <h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>
      <%= f.error_notification %>
      <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Enter Email" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :current_password, required: true, label: false, placeholder: "Current Password" %>
      <%= f.input :password, required: false, label: false, placeholder: "Enter New Password" %>
      <%= f.input :password_confirmation, required: false, label: false, placeholder: "Confirm New Password" %>
      <%= f.button :submit, "Update Password", class: 'btn btn-primary btn-block' %>
    <h3 class="text-center">Cancel Account</h3>
    <div class="text-center"><%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure? How are you suppose to get you tasks done on time?" }, method: :delete, class: "btn btn-primary" %> <%= link_to "Back", :back, class: "btn btn-primary" %>  </div>
  <% end %>
</div>
  
  
  
  