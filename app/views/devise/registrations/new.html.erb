<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-signin'}) do |f| %>
<h2 class="text-center">Sign up</h2>
  <%= f.error_notification %>


    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Enter Email Here" %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholder: "Enter Password Here" %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm Password Here" %>

    <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-block' %>
<%= render "devise/shared/links" %>
<% end %>


