<div class="form-background">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'form-signin'}) do |f| %>
    <%= f.error_notification %>
    <i class="fa fa-lock fa-4x"></i>
    <h2 class='text-center'>Forgot your password?</h2>
    <p>You can reset your password here.</p><br>
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Enter Email", input_html:{class: 'form-control'} %>
    <%= f.button :submit, "Reset My Password", class: 'btn btn-primary' %><br>
  <% end %>
</div>
